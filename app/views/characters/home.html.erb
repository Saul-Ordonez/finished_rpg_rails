

<% if user_signed_in? %>
  <% if Character.by_user_id(current_user.id).length > 0 %>
    <%= link_to 'Start Game', location_path(Location.start_room) %>
  <% else %>
    <%= link_to 'Create Character', new_character_path %>
  <% end %>
<% else %>
  <%= link_to 'Sign In', new_user_session_path %>
<% end %>
