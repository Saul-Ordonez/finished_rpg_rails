<p id="notice"><%= notice %></p>

<h1>Enemies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Hp</th>
      <th>Damage</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enemies.each do |enemy| %>
      <tr>
        <td><%= enemy.name %></td>
        <td><%= enemy.hp %></td>
        <td><%= enemy.damage %></td>
        <td><%= enemy.location.id %></td>
        <td><%= link_to 'Show', enemy %></td>
        <td><%= link_to 'Edit', edit_enemy_path(enemy) %></td>
        <td><%= link_to 'Destroy', enemy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

